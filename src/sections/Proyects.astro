---
import { featuredWorks } from "../data/proyectData.js" 
import { Icon } from 'astro-icon/components'  
import { FaGithub } from "react-icons/fa";
import { FiExternalLink } from "react-icons/fi";
---
<section class="flex flex-col w-full h-full bg-primary p-10">
    <div class="text-center mb-10">
        <h3 class="text-4xl font-bold text-white">Featured Works</h3>
    </div>
   
    <div class="grid grid-cols-7 grid-rows-9 gap-4 grow">
        <!-- Card 1 con efecto hover -->
        <div class="relative col-span-2 row-span-2 bg-red-500 shadow-lg rounded-xl h-full overflow-hidden group">
          <img src="https://placehold.co/150" 
               alt="Imagen de ejemplo" 
               class="absolute inset-0 w-full h-full object-cover rounded-xl transition-transform duration-300">
          <!-- Overlay que aparece al hacer hover -->

          <div class={`absolute inset-0 ${featuredWorks.portfolio.bg_overlay} opacity-0 group-hover:opacity-50 transition duration-300 flex items-center justify-center `}>
            <span class="text-white font-bold">card 1</span>
          </div>
        </div>
      
        <!-- Card 2 -->
        <div class="relative col-span-2 row-span-3 col-start-1 row-start-3 bg-blue-500 shadow-lg rounded-xl h-full overflow-hidden group">
          <img src="https://placehold.co/150" 
               alt="Imagen de ejemplo" 
               class="absolute inset-0 w-full h-full object-cover rounded-xl"> 

          <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-50 transition duration-300 flex items-center justify-center">
            <span class="text-white font-bold">card 2</span>
          </div>

        </div>
      
        <!-- Card 3 -->
        <div class="relative col-span-2 row-span-3 col-start-1 row-start-6 bg-green-500 shadow-lg rounded-xl h-full overflow-hidden group">
          <img src="https://placehold.co/150" 
               alt="Imagen de ejemplo" 
               class="absolute inset-0 w-full h-full object-cover rounded-xl">
          <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-50 transition duration-300 flex items-center justify-center">
            <span class="text-white font-bold">card 3</span>
          </div>
        </div>


        <!-- Card 4 -->
        <div class="relative col-span-5 row-span-3 col-start-3 row-start-1 shadow-lg rounded-xl h-full overflow-hidden group">
            <img
              src={featuredWorks.portfolio.img}
              alt="Imagen de ejemplo"
              class="absolute inset-0 w-full h-full object-cover rounded-xl"
            />
            <div
              class={`absolute inset-0 ${featuredWorks.portfolio.bg_overlay} opacity-0 group-hover:opacity-90 transition duration-300 flex items-center justify-center p-4`}
            >
              <div class="w-full flex">
                <div class="w-1/2 flex flex-col items-center justify-center">
                  <h3 class="text-white font-bold text-lg md:text-xl mb-2">
                    {featuredWorks.portfolio.title}
                  </h3>
                  <p class="text-white text-xs md:text-sm mb-4 text-center">
                    {featuredWorks.portfolio.description}
                  </p>
                  <div class="flex space-x-2">
                    {featuredWorks.portfolio.technologies.map((tech, index) => {
                      const Icon = tech.icon;
                      return (
                        <div>
                          <Icon className={`cursor-pointer w-6 h-6 text-gray-300 transition-colors ${tech.hoverBg}`}
                          />
                        </div>
                      );
                    })}
                  </div>
                </div>

                <div class="w-1/2 flex flex-col items-center justify-center space-y-4">
                  <a
                    href={featuredWorks.portfolio.githubLink}
                    target="_blank"
                    rel="noopener noreferrer" >
                    <FaGithub className="cursor-pointer w-8 h-8 text-gray-300 hover:text-purple-600 transition-colors" />
                  </a>
                  <a href={featuredWorks.portfolio.previewLink} target="_blank"
                    rel="noopener noreferrer"
                  >
                    <FiExternalLink className="cursor-pointer w-8 h-8 text-gray-300 hover:text-purple-600 transition-colors" />
                  </a>
                </div>
              </div>
            </div>
          </div>


        <!-- Card 5 -->
        <div class="relative col-span-3 row-span-3 col-start-3 row-start-4 bg-purple-500 shadow-lg rounded-xl h-full overflow-hidden group">
          <img src="https://placehold.co/150" 
               alt="Imagen de ejemplo" 
               class="absolute inset-0 w-full h-full object-cover rounded-xl">
          <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-50 transition duration-300 flex items-center justify-center">
            <span class="text-white font-bold">card 5</span>
          </div>
        </div>
      
        <!-- Card 6 -->
        <div class="relative col-span-2 row-span-2 col-start-6 row-start-4 bg-pink-500 shadow-lg rounded-xl h-full overflow-hidden group">
          <img src="https://placehold.co/150" 
               alt="Imagen de ejemplo" 
               class="absolute inset-0 w-full h-full object-cover rounded-xl">
          <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-50 transition duration-300 flex items-center justify-center">
            <span class="text-white font-bold">card 6</span>
          </div>
        </div>
      
        <!-- Card 7 -->
        <div class="relative col-span-2 row-span-3 col-start-6 row-start-6 bg-indigo-500 shadow-lg rounded-xl h-full overflow-hidden group">
          <img src="https://placehold.co/150" 
               alt="Imagen de ejemplo" 
               class="absolute inset-0 w-full h-full object-cover rounded-xl">
          <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-50 transition duration-300 flex items-center justify-center">
            <span class="text-white font-bold">card 7</span>
          </div>
        </div>
      
        <!-- Card 8 -->
        <div class="relative col-span-3 row-span-2 col-start-3 row-start-7 bg-gray-500 shadow-lg rounded-xl h-full overflow-hidden group">
          <img src="https://placehold.co/150" 
               alt="Imagen de ejemplo" 
               class="absolute inset-0 w-full h-full object-cover rounded-xl">
          <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-50 transition duration-300 flex items-center justify-center">
            <span class="text-white font-bold">card 8</span>
          </div>

        </div>
      </div>
      
      
</section>