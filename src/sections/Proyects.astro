---
import { featuredWorks } from "../data/proyectData.js"  
import { FaGithub } from "react-icons/fa";
import { FiExternalLink } from "react-icons/fi";
import AOSClient from '../components/AOSClient.jsx';
--- 

<section class="flex flex-col w-full h-full bg-primary p-10" id="portfolio"> 
  <div class="text-center">
    <h3 class="text-4xl font-bold text-white p-10">Featured Works</h3>
  </div>

  <div class="grid grid-cols-7 grid-rows-9 gap-4 grow">
    <!-- Card 1 -->
    <div data-aos="fade-up" class="relative col-span-2 row-span-2 bg-yellow-800 shadow-lg rounded-xl h-full overflow-hidden group transition-transform duration-300 transform hover:scale-105 cursor-pointer">
      <img
        src={featuredWorks.cebuTech.img}
        alt="Imagen de Cebu Tech - App Android"
        class="absolute inset-0 w-full h-full object-cover rounded-xl transition-transform duration-300"
      />
      <div class={`cursor-pointer absolute inset-0 ${featuredWorks.cebuTech.bg_overlay} opacity-0 group-hover:opacity-90 group-focus-within:opacity-90 transition duration-300 flex items-center justify-center p-2 sm:p-4`}>
        <div class="w-full flex flex-col items-center md:flex-row md:justify-center sm:gap-2 gap-1">
          <h3 class="text-white font-bold text-xs sm:text-sm md:text-sm mb-1 sm:mb-2 text-center">
            {featuredWorks.cebuTech.title}
          </h3>
          <div class="w-full md:w-1/2 hidden md:flex flex-wrap justify-center gap-2 mt-2">
            {featuredWorks.cebuTech.technologies.map((tech, index) => {
              const Icon = tech.icon;
              return (
                <div key={index}>
                  <Icon className={`cursor-pointer w-6 h-6 text-gray-300 transition-colors ${tech.hoverBg}`} />
                </div>
              );
            })}
          </div>
          <div class="w-full md:w-1/2 flex justify-evenly">
            <a href={featuredWorks.cebuTech.githubLink} target="_blank" rel="noopener noreferrer">
              <FaGithub className="cursor-pointer w-6 h-6 sm:w-8 sm:h-8 text-gray-300 hover:text-gray-900 transition-colors" />
            </a>
            <a href={featuredWorks.cebuTech.previewLink} target="_blank" rel="noopener noreferrer">
              <FiExternalLink className="cursor-pointer w-6 h-6 sm:w-8 sm:h-8 text-gray-300 hover:text-purple-600 transition-colors" />
            </a>
          </div>
        </div>
      </div>
    </div>      

    <!-- Card 2 -->
    <div data-aos="fade-right" data-aos-delay="100" class="relative col-span-2 row-span-3 col-start-1 row-start-3 bg-blue-500 shadow-lg rounded-xl h-full overflow-hidden group transition-transform duration-300 transform hover:scale-105 cursor-pointer">
      <img 
        src={featuredWorks.comingSoonProject.img}
        alt="Coming Soon" 
        class="absolute inset-0 w-full h-full object-cover rounded-xl transition-transform duration-300"
      />
      <div class="absolute inset-0 bg-gray-800 opacity-0 group-hover:opacity-90 group-focus-within:opacity-90 transition duration-300 flex items-center justify-center p-2 sm:p-4">
        <div class="w-full flex flex-col items-center md:flex-row md:justify-center sm:gap-2 gap-1">
          <h3 class="text-white font-bold text-xs sm:text-sm md:text-sm mb-1 sm:mb-2 text-center">
            {featuredWorks.comingSoonProject.title}
          </h3>
        </div>
      </div>
    </div>

    <!-- Card 3 -->
    <div data-aos="fade-right" data-aos-delay="200" class="relative col-span-2 row-span-4 col-start-1 row-start-6 bg-green-500 shadow-lg rounded-xl h-full overflow-hidden group transition-transform duration-300 transform hover:scale-105 cursor-pointer">
      <img src={featuredWorks.comingSoonProject.img} 
           alt="Coming Soon" 
           class="absolute inset-0 w-full h-full object-cover rounded-xl">
      <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-50 group-focus-within:opacity-50 transition duration-300 flex items-center justify-center">
        <span class="text-white font-bold">
          {featuredWorks.comingSoonProject.title}
        </span>
      </div>
    </div> 

    <!-- Card 4 -->
    <div data-aos="zoom-in" data-aos-delay="300" class="relative col-span-5 row-span-3 col-start-3 row-start-1 shadow-lg rounded-xl h-full overflow-hidden group transition-transform duration-300 transform hover:scale-105 cursor-pointer">
      <img
        src={featuredWorks.portfolio.img}
        alt="Coming Soon"
        class="absolute inset-0 w-full h-full object-cover rounded-xl"
      />
      <div class={`cursor-pointer absolute inset-0 ${featuredWorks.portfolio.bg_overlay} opacity-0 group-hover:opacity-90 group-focus-within:opacity-90 transition duration-300 flex items-center justify-center p-4`}>
        <div class="w-full flex flex-col items-center md:flex-row md:justify-center">
          <h3 class="text-white font-bold text-sm md:text-lg mb-2 text-center">
            {featuredWorks.portfolio.title}
          </h3>
          <div class="w-full md:w-1/2 hidden md:flex flex-wrap justify-center gap-2 mt-2">
            {featuredWorks.portfolio.technologies.map((tech, index) => {
              const Icon = tech.icon;
              return (
                <div key={index}>
                  <Icon className={`cursor-pointer w-6 h-6 text-gray-300 transition-colors ${tech.hoverBg}`} />
                </div>
              );
            })}
          </div>
          <div class="w-full md:w-1/2 flex justify-evenly">
            <a href={featuredWorks.postifySC.githubLink} target="_blank" rel="noopener noreferrer">
              <FaGithub className="cursor-pointer w-8 h-8 text-gray-300 hover:text-purple-600 transition-colors" />
            </a>
            <a href={featuredWorks.postifySC.previewLink} target="_blank" rel="noopener noreferrer">
              <FiExternalLink className="cursor-pointer w-8 h-8 text-gray-300 hover:text-purple-600 transition-colors" />
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Card 5 -->
    <div data-aos="fade-up" data-aos-delay="400" class="relative col-span-3 row-span-3 col-start-3 row-start-4 shadow-lg rounded-xl h-full overflow-hidden group transition-transform duration-300 transform hover:scale-105 cursor-pointer">
      <img
        src={featuredWorks.postifySC.img}
        alt="Imagen de Postify - Share & Connect"
        class="absolute inset-0 w-full h-full object-cover rounded-xl"
      />
      <div class={`cursor-pointer absolute inset-0 ${featuredWorks.postifySC.bg_overlay} opacity-0 group-hover:opacity-90 group-focus-within:opacity-90 transition duration-300 flex items-center justify-center p-4`}>
        <div class="w-full flex flex-col items-center md:flex-row md:justify-center">
          <h3 class="text-white font-bold text-sm md:text-lg mb-2 text-center">
            {featuredWorks.postifySC.title}
          </h3>
          <div class="w-full md:w-1/2 hidden md:flex flex-wrap justify-center gap-2 mt-2">
            {featuredWorks.postifySC.technologies.map((tech, index) => {
              const Icon = tech.icon;
              return (
                <div key={index}>
                  <Icon className={`cursor-pointer w-6 h-6 text-gray-300 transition-colors ${tech.hoverBg}`} />
                </div>
              );
            })}
          </div>
          <div class="w-full md:w-1/2 flex justify-evenly">
            <a href={featuredWorks.postifySC.githubLink} target="_blank" rel="noopener noreferrer">
              <FaGithub className="cursor-pointer w-8 h-8 text-gray-300 hover:text-gray-900 transition-colors" />
            </a>
            <a href={featuredWorks.postifySC.previewLink} target="_blank" rel="noopener noreferrer">
              <FiExternalLink className="cursor-pointer w-8 h-8 text-gray-300 hover:text-purple-600 transition-colors" />
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- Card 6 -->
    <div data-aos="zoom-in" data-aos-delay="500" class="relative col-span-2 row-span-2 col-start-6 row-start-4 bg-pink-500 shadow-lg rounded-xl h-full overflow-hidden group transition-transform duration-300 transform hover:scale-105 cursor-pointer">
      <img src={featuredWorks.comingSoonProject.img}
           alt="Coming Soon" 
           class="absolute inset-0 w-full h-full object-cover rounded-xl">
      <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-50 group-focus-within:opacity-50 transition duration-300 flex items-center justify-center">
        <span class="text-white font-bold">
          {featuredWorks.comingSoonProject.title}
        </span>
      </div>
    </div>
   
    <!-- Card 7 -->
    <div data-aos="fade-up" data-aos-delay="600" class="relative col-span-2 row-span-4 col-start-6 row-start-6 bg-indigo-500 shadow-lg rounded-xl h-full overflow-hidden group transition-transform duration-300 transform hover:scale-105 cursor-pointer">
      <img
        src={featuredWorks.figmaDesign.img}
        alt={featuredWorks.figmaDesign.title}
        class="absolute inset-0 w-full h-full object-cover rounded-xl"
      />
      <div class={`cursor-pointer absolute inset-0 ${featuredWorks.figmaDesign.bg_overlay} opacity-0 group-hover:opacity-90 group-focus-within:opacity-90 transition duration-300 flex flex-col md:flex-row items-center justify-center p-4 space-y-4 md:space-y-0 md:space-x-6`}>
        <h3 class="text-white font-bold text-lg md:text-xl lg:text-2xl text-center md:text-left w-full md:w-auto">
          {featuredWorks.figmaDesign.title}
        </h3>
        <div class="flex flex-wrap justify-center gap-2">
          {featuredWorks.figmaDesign.technologies.map((tech, index) => {
            const Icon = tech.icon;
            return (
              <div key={index} class="flex flex-col items-center">
                <Icon className={`w-6 h-6 sm:w-8 sm:h-8 lg:w-10 lg:h-10 text-gray-300 transition-colors ${tech.hoverBg}`} />
                <span class="text-xs sm:text-sm lg:text-base text-gray-200">{tech.name}</span>
              </div>
            );
          })}
        </div>
      </div>
    </div>

    <!-- Card 8 -->
    <div data-aos="fade-up" data-aos-delay="700" class="relative col-span-3 row-span-3 col-start-3 row-start-7 shadow-lg rounded-xl h-full overflow-hidden group transition-transform duration-300 transform hover:scale-105 cursor-pointer">
      <img
        src={featuredWorks.restaurantMenu.img}
        alt="Imagen de Comprehensive Restaurant Menu Management System with Modern Features"
        class="absolute inset-0 w-full h-full object-cover rounded-xl"
      />
      <div class={`cursor-pointer absolute inset-0 ${featuredWorks.restaurantMenu.bg_overlay} opacity-0 group-hover:opacity-90 group-focus-within:opacity-90 transition duration-300 flex items-center justify-center p-4`}>
        <div class="w-full flex flex-col items-center md:flex-row md:justify-center">
          <h3 class="text-white font-bold text-sm md:text-lg mb-2 text-center">
            {featuredWorks.restaurantMenu.title}
          </h3>
          <div class="w-full md:w-1/2 hidden md:flex flex-wrap justify-center gap-2 mt-2">
            {featuredWorks.restaurantMenu.technologies.map((tech, index) => {
              const Icon = tech.icon;
              return (
                <div key={index}>
                  <Icon className={`cursor-pointer w-6 h-6 text-gray-300 transition-colors ${tech.hoverBg}`} />
                </div>
              );
            })}
          </div>
          <div class="w-full md:w-1/2 flex justify-evenly">
            <a href={featuredWorks.restaurantMenu.githubLink} target="_blank" rel="noopener noreferrer">
              <FaGithub className="cursor-pointer w-8 h-8 text-gray-300 hover:text-gray-900 transition-colors" />
            </a>
            <a href={featuredWorks.restaurantMenu.previewLink} target="_blank" rel="noopener noreferrer">
              <FiExternalLink className="cursor-pointer w-8 h-8 text-gray-300 hover:text-purple-600 transition-colors" />
            </a>
          </div>
        </div>
      </div>
    </div>
    
  </div>
</section>

<AOSClient client:load />
