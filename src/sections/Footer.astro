---
import { FaArrowRight, FaFacebook, FaInstagram, FaLinkedin, FaTwitter, FaYoutube } from 'react-icons/fa';
---
<footer class="bg-primary-light text-white py-8 sm:py-12 px-4 sm:px-6 md:px-12 lg:px-24">
    <div class="container mx-auto">
      <!-- Sección superior con título y botón -->
      <div class="flex flex-col md:flex-row justify-between items-center mb-8 sm:mb-12 text-center md:text-left">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold">Let's Connect there</h2>
        <button class="bg-theme-magenta-blue hover:bg-primary text-white rounded-md px-4 sm:px-6 py-2 mt-4 md:mt-0 cursor-pointer">
          Contact Us
        </button>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 sm:gap-8">
        <div class="space-y-4 sm:space-y-6 text-center md:text-left">
          <div class="flex justify-center md:justify-start items-center space-x-2">
            <div class="bg-indigo-600 rounded-full w-10 h-10 flex items-center justify-center font-bold">BA</div>
          </div>
          <p class="text-gray-400 text-sm max-w-xs mx-auto md:mx-0">
            Passionate backend developer crafting robust and scalable solutions to power seamless digital experiences.
          </p>
          <div class="flex justify-center md:justify-start space-x-3">
            <a href="#" class="text-gray-400 hover:text-white transition-colors">
              <FaFacebook size={18} />
            </a>
            <a href="#" class="text-gray-400 hover:text-white transition-colors">
              <FaInstagram size={18} />
            </a>
            <a href="#" class="text-gray-400 hover:text-white transition-colors">
              <FaLinkedin size={18} />
            </a>
            <a href="#" class="text-gray-400 hover:text-white transition-colors">
              <FaTwitter size={18} />
            </a>
            <a href="#" class="text-gray-400 hover:text-white transition-colors">
              <FaYoutube size={18} />
            </a>
          </div>
        </div>
        <!-- Navegación -->
        <div class="text-center md:text-left">
          <h3 class="font-medium mb-4">Navigation</h3>
          <ul class="space-y-2">
            <li>
              <a href="#" class="text-gray-400 hover:text-white transition-colors text-sm">
                Home
              </a>
            </li>
            <li>
              <a href="#" class="text-gray-400 hover:text-white transition-colors text-sm">
                About Us
              </a>
            </li>
            <li>
              <a href="#" class="text-gray-400 hover:text-white transition-colors text-sm">
                Services
              </a>
            </li>
            <li>
              <a href="#" class="text-gray-400 hover:text-white transition-colors text-sm">
                Resume
              </a>
            </li>
            <li>
              <a href="#" class="text-gray-400 hover:text-white transition-colors text-sm">
                Projects
              </a>
            </li>
          </ul>
        </div>
        <div class="text-center md:text-left">
          <h3 class="font-medium mb-4">Contact</h3>
          <ul class="space-y-2">
            <li class="text-gray-400 text-sm">brayanalmengor300@gmail.com</li>
            <li class="text-gray-400 text-sm">brayanalmengor.netlify.app</li>
          </ul>
        </div>
        <div class="text-center md:text-left">
          <h3 class="font-medium mb-4">Get the latest information</h3>
          <div class="flex justify-center md:justify-start">
            <input
              type="email"
              placeholder="Email Address"
              class="bg-gray-800 text-white px-4 py-2 rounded-l-md w-full text-sm focus:outline-none"
            />
            <button class="bg-indigo-600 hover:bg-indigo-700 rounded-r-md px-3 flex items-center justify-center">
              <FaArrowRight size={18} />
            </button>
          </div>
        </div>
      </div>
 
      <div class="border-t border-gray-800 mt-8 sm:mt-12 pt-4 sm:pt-6 flex flex-col md:flex-row justify-between items-center text-center md:text-left">
        <p class="text-gray-400 text-sm">Copyright© 2025 | Brayan Almengor</p>
        <div class="flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-4 mt-4 md:mt-0">
          <a href="#" class="text-gray-400 hover:text-white transition-colors text-sm">
            Terms & Conditions
          </a>
          <span class="text-gray-400">|</span>
          <a href="#" class="text-gray-400 hover:text-white transition-colors text-sm">
            Privacy Policy
          </a>
        </div>
      </div>
    </div>
  </footer>
  