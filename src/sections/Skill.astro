---
import 'aos/dist/aos.css';
import AOSClient from '../components/AOSClient';
---
<section class="bg-primary flex w-full h-auto p-10 flex-col md:flex-row items-center">
    <!-- Texto -->
    <div data-aos="fade-right" class="w-full md:w-2/5 pr-8">
        <div class="text-start">
            <h3 class="text-lg font-semibold tracking-wide uppercase text-gray-200">My Skills</h3>
            <h2 class="text-4xl font-bold mt-3 text-white leading-tight">
                Robust Backend Architectures & High-Performance Systems
            </h2>
            <p class="mt-5 text-lg text-gray-300">
                I craft high-performance, scalable backend systems with Spring Boot,  
                architecting resilient solutions that power modern applications.  
                From designing intuitive RESTful APIs to optimizing database efficiency,  
                I ensure seamless, robust, and future-proof architectures.  
            </p>
        </div>        
    </div> 
    <!-- Skill Bento -->
    <div class="grid grid-cols-2 gap-5 mt-10 w-full md:w-3/5 md:grid-cols-6 md:grid-rows-7">
        <!-- Card 1: MySQL -->
        <div data-aos="fade-up" data-aos-delay="100" class="bg-theme-magenta-blue col-span-2 row-span-1 md:col-span-3 md:row-span-2 md:col-start-1 md:row-start-2 flex flex-wrap items-center justify-between rounded-xl shadow-lg p-3">
          <div class="flex flex-col items-start w-1/2 space-y-1">
            <i>
              <img src="/image/icon/mysql.svg"  alt="MySQL database icon" class="w-8 h-8 pd-5 bg-white rounded-xl">
            </i>
            <div class="text-start p-1">
              <h4 class="text-white font-semibold text-lg">MySQL</h4>    
              <p class="text-white text-xs">Relational database management system used for structured data storage and retrieval.</p>
            </div>
          </div>
          <div class="w-1/2 h-30">
            <img src="/image/bento/mysql.jpg"  
                 alt="MySQL database banner" class="w-full h-full object-cover rounded-lg">
          </div>
        </div>  
        <!-- Card 2: Docker -->
        <div data-aos="fade-up" data-aos-delay="200" class="bg-theme-magenta-blue col-span-1 row-span-1 md:col-span-2 md:row-span-4 md:col-start-2 md:row-start-4 flex flex-col rounded-xl shadow-lg p-3">
          <div class="flex flex-col items-start w-full mb-1">
            <i>
              <img src="/image/icon/docker1.svg"  
                   alt="Docker containerization platform icon" class="w-8 h-8 pd-5 bg-white rounded-xl mb-1">
            </i>
            <div class="ml-2 text-start">
              <h4 class="text-white font-semibold text-lg">Docker</h4>    
              <p class="text-white text-xs">Containerization platform to deploy, manage, and scale applications efficiently.</p>
            </div>
          </div>
          <div class="h-full mt-3">
            <img src="/image/bento/dockerbanner.jpg" 
                 alt="Docker banner image showing containerization concept" class="w-full h-full object-cover rounded-lg">
          </div>
        </div>
        <!-- Card 3: Spring Boot -->
        <div data-aos="fade-up" data-aos-delay="300" class="bg-theme-magenta-blue col-span-1 row-span-1 md:col-span-2 md:row-span-4 md:col-start-4 md:row-start-1 flex flex-col rounded-xl shadow-lg p-3 overflow-hidden">
          <div class="flex flex-col items-start w-full mb-1">
            <i>
              <img src="/image/icon/springboot.svg" 
                   alt="Spring Boot framework icon" class="w-8 h-8 pd-5 bg-white rounded-xl mb-1">
            </i>
            <div class="text-start">
              <h4 class="text-white font-semibold text-lg">Spring Boot</h4>    
              <p class="text-white text-xs">Framework for building robust API REST services and backend applications.</p>
            </div>
          </div>
          <div class="w-full h-full flex mt-3">
            <img src="/image/bento/springbootbanner.png"
                 alt="Spring Boot banner with API development concept" class="w-full h-full object-cover rounded-lg">
          </div>
        </div>
        <!-- Card 4: Figma -->
        <div data-aos="fade-up" data-aos-delay="400" class="bg-theme-magenta-blue col-span-2 row-span-1 md:col-span-3 md:row-span-2 md:col-start-4 md:row-start-5 flex flex-nowrap items-center rounded-xl shadow-lg p-3">
          <div class="w-1/2 flex flex-col items-start space-x-1">
            <i>
              <img src="/image/icon/figma.svg" alt="Figma UI/UX design tool icon" class="w-8 h-8 bg-white rounded-xl">
            </i>
            <div>
              <h4 class="text-white font-semibold text-lg">Figma</h4>    
              <p class="text-white text-xs">UI/UX design tool for prototyping and designing user-friendly interfaces.</p>
            </div>
          </div>
          <div class="w-1/2 h-full">
            <img src="/image/bento/figma.png"  
                 alt="Figma banner showcasing UI/UX prototyping" class="w-full h-full object-cover rounded-lg">
          </div>
        </div>
      </div>
      
</section>

<AOSClient client:load />