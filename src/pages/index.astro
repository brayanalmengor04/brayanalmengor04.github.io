---
import LayoutMain from '../layouts/Layout.astro';
import HeroCarrucel from '../components/Hero/HeroCarrucel.astro';
import Projects from "../components/Proyect/Projects.astro";
import { projects } from '../data/projectsData';
---
<LayoutMain title="Brayan Almengor | Software Developer Portfolio">
    <!-- slot -->
    <HeroCarrucel />
    <!-- About section pages -->
    <section class="about spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6">
                    <div class="about__pic">
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="about__pic__item about__pic__item--large set-bg"
                                     data-setbg="/img/imagedev2.png"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about__text">
                        <div class="section-title">
                            <span>About Us</span>
                            <h2>Who Am I</h2>
                        </div>
                        <div class="row">
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="services__item">
                                    <div class="services__item__icon">
                                        <i class="bi bi-diagram-3"></i>
                                    </div>
                                    <h4>Code Distribution</h4>
                                    <p>We optimize code deployment, ensuring smooth transitions between environments.</p>
                                </div>
                            </div>
                            <!-- Cloud Solutions Section -->
                            <div class="col-lg-6 col-md-6 col-sm-6">
                                <div class="services__item">
                                    <div class="services__item__icon">
                                        <i class="bi bi-cloud"></i>
                                    </div>
                                    <h4>Cloud Solutions</h4>
                                    <p>Scalable cloud infrastructures for efficient hosting and seamless experiences.</p>
                                </div>
                            </div>
                        </div>
                        <div class="about__text__desc">
                            <p>I am Brayan Almengor, a passionate Panamanian software developer and student at the Technological University of Panama. I specialize in creating personal projects to enhance my skills in frameworks like Spring Boot, Laravel, React, and Angular, and I am currently building my professional web portfolio.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Services Section Begin -->
    <section class="services-page spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="services__item">
                        <div class="services__item__icon">
                            <i class="bi bi-gear"></i> <!-- Icono de engranaje para Diseño de Software -->
                        </div>
                        <h4>Software Design</h4>
                        <p>We provide efficient and scalable software design services, focusing on clean architecture and seamless user experience.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="services__item">
                        <div class="services__item__icon">
                            <i class="bi bi-code-slash"></i> <!-- Icono de código para Clean Code -->
                        </div>
                        <h4>Clean Code Architecture</h4>
                        <p>Our focus is on writing clean, maintainable, and well-structured code, ensuring the long-term success of your project.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="services__item">
                        <div class="services__item__icon">
                            <i class="bi bi-file-earmark-text"></i> <!-- Icono de documento para Documentación -->
                        </div>
                        <h4>Documentation</h4>
                        <p>We ensure that all your projects are well-documented, making future development and maintenance a smooth and easy process.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="services__item">
                        <div class="services__item__icon">
                            <i class="bi bi-stack"></i> <!-- Icono de pila para Arquitectura de Software -->
                        </div>
                        <h4>Software Architecture</h4>
                        <p>We create robust software architectures tailored to your project’s needs, ensuring scalability and flexibility for the future.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="services__item">
                        <div class="services__item__icon">
                            <i class="bi bi-check-circle"></i> <!-- Icono de verificación para Testing -->
                        </div>
                        <h4>Automated Testing</h4>
                        <p>We implement automated testing solutions to ensure your software works flawlessly and meets the highest quality standards.</p>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-sm-6">
                    <div class="services__item">
                        <div class="services__item__icon">
                            <i class="bi bi-cloud-download"></i> <!-- Icono de nube para DevOps -->
                        </div>
                        <h4>DevOps Integration</h4>
                        <p>We help streamline your development and deployment processes with efficient DevOps practices, ensuring faster time-to-market.</p>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Services Section End -->

    <section class="portfolio spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="portfolio__filter">
                        <li class="active" data-filter="*">All</li>
                        <li data-filter=".Website">Website</li>
                        <li data-filter=".Android">Android</li>
                        <li data-filter=".Figma">Figma</li>
                        <li data-filter=".Legacy">Legacy</li>
                    </ul>
                </div>
            </div>
            <div class="row portfolio__gallery">
                {projects.map((project) => (
                        <Projects {...project} />
                ))}
            </div>
        </div>
    </section>

    <!-- Contact Widget Section Begin -->
    <section class="contact-widget spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 col-md-6 col-md-3">
                    <div class="contact__widget__item">
                        <div class="contact__widget__item__icon">
                            <i class="fa fa-map-marker"></i>
                        </div>
                        <div class="contact__widget__item__text">
                            <h4>Address</h4>
                            <p>Panama City, Panama</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-md-6 col-md-3">
                    <div class="contact__widget__item">
                        <div class="contact__widget__item__icon">
                            <i class="fa fa-phone"></i>
                        </div>
                        <div class="contact__widget__item__text">
                            <h4>Hotline</h4>
                            <p>+507 65425634</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 col-md-6 col-md-6 col-md-3">
                    <div class="contact__widget__item">
                        <div class="contact__widget__item__icon">
                            <i class="fa fa-envelope"></i>
                        </div>
                        <div class="contact__widget__item__text">
                            <h4>Email</h4>
                            <p>brayanalmengor300@gmail.com</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Contact Widget Section End -->
    <section class="contact spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <div class="contact__map">
                        <iframe
                                src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d15960.485724003718!2d-79.516667!3d8.983333!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8e3bba2b0c26fb33%3A0x774d0b54f5774137!2sPanama%20City%2C%20Panama!5e0!3m2!1sen!2sbd!4v1596152431947!5m2!1sen!2sbd"
                                height="450" style="border:0;"></iframe>

                    </div>
                </div>
                <div class="col-lg-6 col-md-6">
                    <div class="contact__form">
                        <h3>Get in touch</h3>
                        <form action="mailto:brayanalmengor300@gmail.com" method="post" enctype="text/plain">
                            <input type="text" placeholder="Name" name="name" required>
                            <input type="email" placeholder="Email" name="email" required>
                            <input type="text" placeholder="Asunto" name="asunto">
                            <textarea placeholder="Message" name="message" required></textarea>
                            <button type="submit" class="site-btn">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>

</LayoutMain>